<%= form_for [@organizer, @challenge], validate: true, html: { class: "dbl-col" } do |f| %>
  <span class="label-text">Options</span>
  <div class="form-group">
    <%= f.check_box :winners_tab_active, {}, "true", "false" %>
    <%= f.label :winners_tab_active, "Winner's Tab Active?" %>
  </div>

  <span class="label-text">Winner's Tab (Markdown)</span>

  <label>Submission Instructions</label>
  <div class="md-content">
    <%= f.text_area :winner_description, class: "form-control ", data: {controller: "ckeditor"} %>
  </div>

  <%= render partial: 'challenges/form/submit_buttons', locals: { f: f } %>
<% end %>
