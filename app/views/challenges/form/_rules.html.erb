<%= form_for [@organizer,@challenge], validate: true, html: { class: "form-rg", multipart: true } do |f| %>
<span class="label-text">Rules</span>

<% if @challenge.current_challenge_rules %>
    <div class="md-content">
      <%= sanitize(@challenge.current_challenge_rules.terms) %>
    </div>
<% else %>
  No rules added yet
<% end %>
<hr/>

<div class="links">
<%= link_to_add_association 'Set challenge rules', f, :challenge_rules,
                            html_options = {
                                partial: 'challenges/form/challenge_rules_fields',
                                class: 'form-text',
                                id: 'replace-rules-button' } %>
</div>
<%= render partial: 'challenges/form/submit_buttons', locals: { f: f } %>
<% end %>
