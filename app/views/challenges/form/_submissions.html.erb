<%= form_for [@organizer,@challenge], html: { class: "dbl-col" } do |f| %>

  <% @challenge.errors.full_messages.each do |error| %>
    <p><%= error %></p>
  <% end %>

  <div class="form-group">
    <h3>This page configures the optional online submissions page, if the challenge requires it.</h3>
  </div>

  <div class="form-group">
    <% if @organizer.clef? %>
      <%= render partial: 'challenges/form/clef_fields', locals: { f: f } %>
    <% end %>

    <%= f.check_box :online_submissions,
                    { data:
                          {target: 'challenge-submission.online', action: 'click->challenge-submission#toggleOnline' }},
                    "true", "false" %>
    <%= f.label :online_submissions, 'Online Submissions Permitted?' %>
  </div>

  <div class="form-group">

    <%= f.check_box :post_challenge_submissions,
                    { data: { target: 'challenge-submission.post'}}, "true", "false" %>
    <%= f.label :post_challenge_submissions, 'Post Challenge Submissions Permitted?' %>
  </div>

  <label>Submission Instructions</label>
  <div class="md-content">
    <%= f.text_area :submission_instructions, class: "form-control ", data: {controller: "ckeditor"} %>
  </div>

  <h3>This license text is displayed on the submission upload page during and after the challenge</h3>
  <div class="md-content">
    <%= f.text_area :license, class: "form-control ", data: {controller: "ckeditor"}, placeholder: "Please upload your submissions and include a detailed description of the methodology, techniques and insights leveraged with this submission. After the end of the challenge, these comments will be made public, and the submitted code and models will be freely available to other AIcrowd participants. All submitted content will be licensed under Creative Commons (CC)." %>
  </div>

  <%= render partial: 'challenges/form/submit_buttons', locals: { f: f } %>
<% end %>

